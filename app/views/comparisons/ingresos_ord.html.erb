<p id="notice"><%= notice %></p>

<h3>Ingresos Ordianrios</h3>

<%=  @datos.to_json.html_safe %>;

<div class="row">
<%= form_tag comparisons_path, :method => :get do |f| %>
  <%= select_tag :fecha_datos, options_for_select(@fechas_datos), prompt: "Seleccionar Fecha", onchange: "this.form.submit();"  %>
<% end %>
</div>

<div class="row">
  <table class="table">
    <thead>
      <tr>
        <td>
          Partido
        </td>
        <td>

        </td>
        <td>
          Monto Total
        </td>
      </tr>
    </thead>
    <tbody>
      <% @datos.each_with_index do |linea, i| %>
      <tr>
        <div id='header'></div>
      </tr>
      <tr>
        <td>
          <%= linea[:nombre] %>
        </td>
        <td>
          <div id="barras_<%= i.to_s %>"></div>
        </td>
        <td>
          <%= ((linea[:total_privado].nil? ? 0 : linea[:total_privado]) + (linea[:total_publico].nil? ? 0 : linea[:total_publico])).to_s %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>


<div id="barras"></div>

<br>
<script>
$(document).ready(function(){
  var data = <%=  @datos.to_json.html_safe %>;
  var fechas = <%=  @fechas_datos.to_json.html_safe %>;
  var fecha_seleccionada =  <%=  @fecha.to_json.html_safe %>;
  Raphael("header",400, 40 ).ingreso_ord_header();
  for(var i=0; i < data.length; i++){
    Raphael("barras_" + i,300, 30 ).ingreso_ord_compare_bar(data[i]);
  }

});
</script>
