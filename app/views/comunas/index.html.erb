<h1>Listing Comunas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comunas.each do |comuna| %>
      <tr>
        <td><%= comuna %></td>
        <td><%= link_to 'Show', partido_region_comuna_path(@partido, @region, comuna) %></td>
        <td><%= link_to 'Edit', edit_partido_region_comuna_path(@partido, @region, comuna) %></td>
        <td><%= link_to 'Destroy', partido_region_comuna_path(@partido, @region, comuna), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

