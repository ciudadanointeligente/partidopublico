<%= simple_form_for @partido, wrapper: :horizontal_form, html: { class: "horizontal_form", id: "partido_steps_form" }, url: wizard_path, :remote => true, authenticity_token: true, method: :put do |f| %>
  <% if @partido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@partido.errors.count, "error") %> prohibited this partido from being saved:</h2>
      <ul>
      <% @partido.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="flash_message" class="hidden alert alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>

  </div>

  <div class="fields">
      <%= yield f %>
  </div>
  <div class="row" style="padding-top: 15px;">
    <div class="col-md-12">
      <%= f.button :submit, class:'btn btn-success' %>
      <%= link_to next_wizard_path, class: 'btn btn-default' do %>
        Siguiente
      <% end %>
    </div>
  </div>
<% end %>
