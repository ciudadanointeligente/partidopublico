<div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= f.object.nombre %>
    </div>
    <div class="panel-body">

      <% if f.object.id.nil? %>
        <%= f.input :nombre  %>
        <%= f.input :funciones  %>
      <% else %>
        <!-- <%= f.object.funciones %> -->
        <%= f.input :id, as: :hidden %>
        <%= f.input :nombre %>
        <%= f.input :funciones %>

        <%= link_to_remove_association f, class: 'btn btn-default' do %>
          <i class="fa fa-trash"></i> Marcar para eliminar
        <% end %>
      <% end %>

    </div>
  </div>
</div>