<div class="col-md-4">
  <div class="panel panel-default ">
    <div class="panel-heading">
      <% if f.object.id.nil? %>
        Nueva Participación
      <% else %>
        Participación:  <%= f.object.entidad %>
      <% end %>
    </div>
    <div class="panel-body">

      <% if f.object.id.nil? %>
        <%= f.input :entidad %>
        <%= f.input :descripcion %>
        <%= f.input :documento %>
      <% else %>
        <ul>
          <li><%= f.object.entidad %></li>
          <li><%= f.object.descripcion %></li>
          <li><%= number_to_human_size f.object.documento.size %></li>
        </ul>
        <%= f.input :id, as: :hidden %>
      <% end %>

      <div class="row">
        <div class="col-md-12">
          <%= link_to_remove_association f, class: 'btn btn-default' do %>
            <i class="fa fa-trash"></i> Marcar para eliminar
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>