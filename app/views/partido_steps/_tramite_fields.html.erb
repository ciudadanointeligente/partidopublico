<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <% if f.object.id.nil? %>
        Nuevo tr√°mite
      <% else %>
        <%= f.object.nombre %>
      <% end %>
    </div>
    <div class="panel-body">

      <% if f.object.id.nil? %>
        <%= f.input :nombre  %>
        <%= f.input :descripcion  %>
        <%= f.input :documento  %>
      <% else %>
        <%= f.object.descripcion %>
        <%= f.input :descripcion, as: :hidden  %>
        <%= f.input :id, as: :hidden %>
      <% end %>


      <div class="panel panel-default ">
        <div class="panel-heading">
          Procedimientos
        </div>
        <div class="panel-body">
          <%= f.fields_for :procedimientos do |procedimiento| %>
            <%= render 'procedimiento_fields', :f => procedimiento %>
          <% end %>

        </div>
        <div class="panel-footer">
          <%= link_to_add_association f, :procedimientos, class: 'btn btn-default' do %>
            <i class="fa fa-plus"></i> Agregar procedimiento
          <% end %>
        </div>
      </div>

      <div class="panel panel-default ">
        <div class="panel-heading">
          Requisitos
        </div>
        <div class="panel-body">
          <%= f.fields_for :requisitos do |requisito| %>
            <%= render 'requisito_fields', :f => requisito %>
          <% end %>
        </div>
        <div class="panel-footer">
          <%= link_to_add_association f, :requisitos, class: 'btn btn-default' do %>
            <i class="fa fa-plus"></i> Agregar requisito
          <% end %>
        </div>

      </div>

    </div>
    <div class="panel-footer">
      <%= link_to_remove_association f, class: 'btn btn-danger' do %>
        <i class="fa fa-trash"></i> Marcar para eliminar
      <% end %>
    </div>
  </div>

</div>
