<div class="container">
  <h2 class="page-header">Acuerdos</h2>

  <%= render :layout => 'form' do |f| %>
    <div class="row">
      <div class="col-md-4">
        <div class="form-inline">
          <div class="form-group">
            <%= link_to_add_association f, :acuerdos, class: 'btn btn-success form-control', data: { 'association-insertion-method': 'append', 'association-insertion-node': '.acuerdo-organos' } do %>
              <i class="fa fa-plus"></i> Agregar acuerdos
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="row acuerdo-organos"></div>

    <div class="row">
      <%= f.fields_for :acuerdos do |acuerdo| %>
         <%= render 'acuerdo_fields', :f => acuerdo %>
      <% end %>
    </div>
  <% end %>
</div>