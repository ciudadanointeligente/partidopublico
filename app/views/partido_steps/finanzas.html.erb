<div class="container"  ng-controller="finanzasController">
  <h2>Finanzas</h2>

  <div>
    <ul class="nav nav-tabs" role="tablist">
      <li ng-repeat="cf in categorias_financieras track by $index" role="presentation" ng-class="$index === 0 ? 'active' : '' "><a href="#item-{{$index}}" aria-controls="item-{{$index}}" role="tab" data-toggle="tab">{{cf.titulo}}</a></li>
    </ul>

    <div class="tab-content">

      <div ng-repeat="cf in categorias_financieras track by $index" role="tabpanel" class="tab-pane" id="item-{{$index}}" ng-class="$index === 0 ? 'active' : '' ">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Concepto</th>
              <th>Importe</th>
              <th>Dinero Público</th>
              <th>Categoría Financiera</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="ic in items_contables | filter:{categoria_financiera_id:cf.id}">
              <td>{{ ic.concepto }}</td>
              <td>{{ ic.importe }}</td>
              <td><i class="fa" ng-class="ic.dinero_publico ? 'fa-check' : ''"></i></td>
              <td>{{ ic.categoria_financiera }}</td>
              <td>
                <i class="fa fa-pencil" ng-click="modalItemContable(ic)"></i>
                <i class="fa fa-trash" ng-click="deleteItemContable(ic)"></i>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>

  <a href="#" class="btn btn-default" ng-click="modalItemContable(null)">Agregar item</a>
  <script type="text/ng-template" id="item_financiero_modal_aside.html">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel">Modal title</h4>
    </div>
    <div class="modal-body">
      <div class="form-group">
        <label for="concepto">Concepto</label>
        <input type="text" class="form-control" id="concepto" placeholder="Concepto" ng-model="item_contable.concepto">
      </div>

      <div class="form-group">
        <label for="importe">Importe</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <input type="number" class="form-control" id="importe" placeholder="Importe" ng-model="item_contable.importe">
        </div>
      </div>

      <div class="form-group">
        <label for="cat_financiera">Categoría Financiera</label>
        <select name="cat_financiera" id="cat_financiera" ng-options="categoria.id as categoria.titulo for categoria in categorias_financieras" ng-model="item_contable.categoria_financiera_id"></select>
      </div>

      <div class="form-group">
        <label>
          Dinero Público? <input type="checkbox" id="dinero_publico" name="dinero_publico" ng-checked="item_contable.dinero_publico" ng-model="item_contable.dinero_publico" value="1">
        </label>

      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" ng-click="cancel($event)">Close</button>
      <button type="button" class="btn btn-primary" ng-click="save($event)">Save changes</button>
    </div>
  </script>


</div>