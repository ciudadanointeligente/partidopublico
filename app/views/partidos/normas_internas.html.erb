<h3>Datos b치sicos del partido</h3>
<div class="row">
  <div class="col-md-3">
    <% if @partido.logo_file_size %>
    <%= image_tag @partido.logo.url(:thumb), class: "img-responsive", alt: @partido.sigla %>
    <% end %>
  </div>
  <div class="col-md-9 basicos">
    <table>
      <tbody>
        <% if !@partido.sigla.blank? %>
        <tr>
          <td><span>Sigla</span></td>
          <td><%= @partido.sigla %></td>
        </tr>
        <% end %>
        <% if !@partido.lema.blank? %>
        <tr>
          <td><span>Lema</span></td>
          <td><%= @partido.lema %></td>
        </tr>
        <% end %>
        <% if !@partido.fecha_fundacion.blank? %>
        <tr>
          <td><span>Fecha fundaci칩n</span></td>
          <td> <%= l(@partido.fecha_fundacion, format: '%d de %B del %Y') %></td>
        </tr>
        <% end %>
        <% if !@partido.texto.blank? %>
        <tr>
          <td><span>Rese침a</span></td>
          <td><%= @partido.texto %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<h3>Normas</h3>
<% @normas_internas.map{|n| n.tipo_marco_normativo}.uniq.each do |tipo| %>
<div class="row">
  <h3><%= tipo %></h3>
  <ul class="list-inline list-unstyled nospace">
    <%@normas_internas.where(tipo_marco_normativo: tipo).each do |n| %>
      <li class="col-xs-12 col-sm-6 col-md-4 documents">
        <i class="fa fa-file-o fa-3x" style="color: #F28269"></i>
        <h5>
          <%= link_to n.link, target: "_blank", onclick: "ga('send','event','click','"+n.link+"')" do %>
            <%= n.denominacion %>
          <% end %>
        </h5>
      </li>
    <% end %>
  </ul>
</div>
<% end %>
