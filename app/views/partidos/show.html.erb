<div class="container">
  <div class="row">

    <div class="col-md-4">
      <ul>
        <li>
          <a href="#normas-internas" data-toggle="pill" aria-controls="normas-internas" role="tab">Normas Internas y Pensamiento</a>
        </li>
        <li>
          Presencia Nacional
          <ul>
            <li>
              <a href="#regiones-constituido" data-toggle="pill" aria-controls="regiones-constituido" role="tab">Regiones constituido</a>
            </li>
            <li>
              <a href="#numero-de-afiliados" data-toggle="pill" aria-controls="numero-de-afiliados" role="tab">Número de afiliados</a>
            </li>
            <li>
              <a href="#afiliacion" data-toggle="pill" aria-controls="afiliacion" role="tab">Afiliación y desafiliación</a>
            </li>
            <li>
              <a href="#sedes" data-toggle="pill" aria-controls="sedes" role="tab">Domicilio y sedes de contacto</a>
            </li>
            <li>
              <a href="#representantes" data-toggle="pill" aria-controls="representates" role="tab">Representantes</a>
            </li>
          </ul>
        </li>
        <li>
          Cómo participar
          <ul>
            <li><a href="#cargo-popular" data-toggle="pill" aria-controls="cargo-popular" role="tab">Postular a cargo popular</a></li>
            <li><a href="#cargo-interno" data-toggle="pill" aria-controls="cargo-interno" role="tab">Postular a cargo de dirección interna</a></li>
          </ul>
        </li>
        <li>
          Vínculos e Intereses
          <ul>
            <li>
              <a href="#vinculo-interes-entidad" data-toggle="pill" aria-controls="vinculo-interes-entidad" role="tab">Entidades en que se tenga participación</a>
            </li>
            <li>
              <a href="#pactos-electorales" data-toggle="pill" aria-controls="pactos-electorales" role="tab">Pactos electorales que integra</a>
            </li>
          </ul>
        </li>
      </ul>
    </div>

    <div class="col-md-8">
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane" id="normas-internas">NI</div>
        <div role="tabpanel" class="tab-pane active" id="regiones-constituido">
          <h3 class="page-header">Regiones constituido</h3>
          <ul>
            <% @partido.regions.each do |r| %>
            <li>
                <%= r.nombre %>
            </li>
            <% end %>
          </ul>
        </div>
        <div role="tabpanel" class="tab-pane" id="numero-de-afiliados">
          <h3 class="page-header">Número de afiliados</h3>
          <table class="table">
            <thead>
              <tr>
                <th>Región</th>
                <th>Hombres</th>
                <th>Mujeres</th>
              </tr>
            </thead>
            <tbody>
              <% @datos_region.each do |r| %>
              <tr>
                <td><%= r["region"] %></td>
                <td><%= r["hombres"] %></td>
                <td><%= r["mujeres"] %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="tab-pane" id="afiliacion" role="tabpanel"></div>
        <div class="tab-pane" id="sedes" role="tabpanel">
          <h3 class="page-header">Domicilio y sedes de contacto</h3>
          <% @datos_sedes.each do |r| %>
            <h4 class="page-header"><%= r["region"] %></h4>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Direccion</th>
                  <th>Contacto</th>
                  <th>Comuna</th>
                </tr>
              </thead>
              <tbody>
                <% r["sedes"].each do |s| %>
                <tr>
                  <td><%= s["direccion"] %></td>
                  <td><%= s["contacto"] %></td>
                  <td><%= s["comuna"] %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
        <div class="tab-pane" id="representantes" role="tabpanel">
          <h3 class="page-header">Representantes</h3>

            <% @datos_cargos.each do |r| %>
            <h4 class="page-header"><%= r['region'] %></h4>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Cargo</th>
                  <th>Comuna</th>
                </tr>
              </thead>
              <tbody>
                <% r['cargos'].each do |c| %>
                <tr>
                  <td><%= c['persona'] %></td>
                  <td><%= c['cargo'] %></td>
                  <td><%= c['comuna'] %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <% end %>

        </div>
        <div class="tab-pane" id="cargo-popular" role="tabpanel">
          <h3 class="page-header">Postular a Cargo Popular</h3>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Fecha elección</th>
                <th>días antes</th>
                <th>Cargo postulación</th>
              </tr>
            </thead>
            <tbody>
              <% @partido.eleccion_populars.each do |e| %>
              <tr>
                <td><%= e.fecha_eleccion %></td>
                <td><%= e.dias %></td>
                <td><%= e.cargo %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane" id="cargo-interno" role="tabpanel">
          <h3 class="page-header">Postular a Cargo de Dirección Interna</h3>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Fecha elección</th>
                <th>días antes</th>
                <th>Cargo postulación</th>
                <th>Organo Interno</th>
                <th>Funciones</th>
              </tr>
            </thead>
            <tbody>
              <% @partido.eleccion_internas.each do |e| %>
              <tr>
                <td><%= e.fecha_eleccion %></td>
                <td><%= e.fecha_limite_inscripcion %></td>
                <td><%= e.cargo %></td>
                <td><%= e.organo_interno.nombre %></td>
                <td><%= e.organo_interno.funciones %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane" id="vinculo-interes-entidad" role="tabpanel">
          <h3 class="page-header">Entidades en que se tenga participación</h3>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Entidad</th>
                <th>Descripción</th>
                <th>Documento</th>
              </tr>
            </thead>
            <tbody>
              <% @partido.participacion_entidads.each do |e| %>
              <tr>
                <td><%= e.entidad %></td>
                <td><%= e.descripcion %></td>
                <td><%= e.documento_file_name %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane" id="pactos-electorales" role="tabpanel">
          <h3 class="page-header">Pactos Electorales</h3>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Pacto</th>
                <th>Descripción</th>
                <th>Año</th>
                <th>Partidos</th>
              </tr>
            </thead>
            <tbody>
              <% @partido.pacto_electorals.each do |p| %>
              <tr>
                <td><%= p.nombre_pacto %></td>
                <td><%= p.descripcion %></td>
                <td><%= p.ano_eleccion %></td>
                <td>
                  <ul>
                    <% p.partidos.each do |p| %>
                      <li><%= p.nombre %></li>
                    <% end %>
                  </ul>
                  </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
