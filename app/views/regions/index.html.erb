<p id="notice"><%= notice %></p>

<h1>Listing Regions</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.nombre %></td>
        <td><%= link_to 'Show', partido_region_path(@partido, region) %></td>
        <td><%= link_to 'Edit', edit_partido_region_path(@partido, region) %></td>
        <td><%= link_to 'Destroy', partido_region_path(@partido, region), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Region', new_partido_region_path(@partido) %>
