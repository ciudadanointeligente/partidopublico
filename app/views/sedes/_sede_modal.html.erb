<script type="text/ng-template" id="sede_modal_aside.html">
  <div class="modal-header">
    <h3>Datos Sede</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for :sede, :multipart => true , :remote => true do |f| %>
      <%= f.input :partido_id, as: :hidden, :value => @partido.id, input_html: { 'ng-model': "sede.partido_id"} %>
      <!--<select name="region_id" ng-options="region.id as region.nombre for region in regions" ng-model="sede.region_id" class="form-control chosen-select"></select>-->
      <%= f.collection_select(:region_id, @partido.regions, :id, :nombre, {}, {class: 'form-control', 'ng-model': 'sede.region_id'}) %>
      <%= f.input :direccion, input_html: { 'ng-model': "sede.direccion", 'placeholder': "DirecciÃ³n sede" } %>
      <%= f.input :contacto, input_html: { 'ng-model': "sede.contacto", 'placeholder': "Contacto sede" } %>
    <% end %>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="save($event)">guardar</button>
    <button class="btn btn-warning" ng-click="cancel($event)">cancelar</button>
  </div>
</script>