<!-- Title -->
<div class="section">
  <div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2><%= t('.enrolled_parties') %>:</h2>
            Selecciona un partido
        </div>
    </div>
    <div class="row text-center">
        <% @partidos.each do |partido| %>
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                <% if !partido.logo.blank? %>
                <div class="logo">
                    <%= image_tag partido.logo.url(:medium), :class => "img-responsive", :alt => partido.nombre + ' - ' + partido.lema %>
                </div>
                <% end %>
                <div class="caption">
                    <p><%= partido.nombre %></p>
                </div>
                <div class="buttons">
                    <a href="<%= partido_normas_internas_path(partido) %>" class="btn btn-primary"><%= t('.details') %></a>
                    <!-- <a href="<%= partido_steps_path(partido)%>" class="btn btn-default"><%= t('.edit') %></a> -->
                </div>
            </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
